@model List<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="AddProduct" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add new Product
			</a>
		</div>
	</div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Title
                </th>
                
                <th>
                    Quontity
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Id
                    </td>
                    <td width="20%">
                        @obj.Title
                    </td>
                    <td width="20%">
                        @obj.Quantity
                    </td>
                    <td width="20%">
                        @obj.Price
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Update" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Update</a>
                            <a asp-controller="Product" asp-action="Remove" asp-route-id="@obj.Id" 
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Remove</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>