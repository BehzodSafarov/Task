@model User;

<h1 class="text-center">Tizimga kirish</h1>

<div class="d-flex justify-content-center">
    <form asp-action="LogIn" class="mb-3 w-25" method="post">
        <div class="mb-3">
            <label asp-for="@Model.UserName" class="form-label">UserName</label>
            <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div>
            @{
                if(ViewBag.NullUserName == false)
                {
                    <p class="text-danger">Username can't be null</p>
                }
            }
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PasswordHash" class="form-label">Password</label>
            <input type="password" asp-for="@Model.PasswordHash" class="form-control">
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
            
        </div>
        <div>
             @{

                if(ViewBag.NullPassword == false)
                {
                    <p class="text-danger"> password can't be null</p>
                }
                if(ViewBag.PasswordLength == false)
                {
                   <p class="text-danger"> password length must be 6 </p>  
                }

                if(ViewBag.NotSignedId == false)
                {
                     <p class="text-danger">Password or UserName false</p>
                }
            }
        </div>
        <br>
        <div>
           <input class="form-control btn-primary" type="submit" value="LogIn" />
        </div>
        </br>
    </form>
</div>